{
  "compilerOptions": {
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  }
}
